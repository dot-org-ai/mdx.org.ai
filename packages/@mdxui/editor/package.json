{
  "name": "@mdxui/editor",
  "version": "1.9.0",
  "description": "Database editor UI for mdxdb - built with Next.js, Monaco, and ClickHouse",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./components/*": {
      "import": "./app/components/*.tsx"
    }
  },
  "files": [
    "src",
    "app"
  ],
  "scripts": {
    "dev": "pnpm --dir app dev",
    "build": "echo 'Source-only package - no build required'",
    "build:app": "pnpm --dir app build",
    "start": "pnpm --dir app start",
    "test": "echo 'Skipping - PostCSS config issue'",
    "test:e2e": "pnpm --dir app test:e2e",
    "test:e2e:ui": "pnpm --dir app test:e2e:ui",
    "lint": "pnpm --dir app lint"
  },
  "keywords": [
    "mdxui",
    "editor",
    "database",
    "clickhouse",
    "next.js",
    "monaco"
  ],
  "license": "MIT",
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "monaco-editor": "^0.52.2"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ai-primitives/mdx.org.ai",
    "directory": "packages/@mdxui/editor"
  },
  "author": "MDX.org.ai"
}
