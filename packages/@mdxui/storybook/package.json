{
  "name": "@mdxui/storybook",
  "version": "0.0.1",
  "description": "Auto-generate Storybook stories from MDXLD documents",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./loader": {
      "types": "./dist/loader.d.ts",
      "import": "./dist/loader.js",
      "require": "./dist/loader.cjs"
    },
    "./plugin": {
      "types": "./dist/plugin.d.ts",
      "import": "./dist/plugin.js",
      "require": "./dist/plugin.cjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mdxui",
    "storybook",
    "mdx",
    "stories",
    "generator",
    "automation"
  ],
  "author": "MDX.org.ai",
  "license": "MIT",
  "dependencies": {
    "fast-glob": "^3.3.0",
    "mdxld": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vite": "^6.0.0"
  },
  "peerDependencies": {
    "@storybook/react": "^8.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "vite": "^5.0.0 || ^6.0.0"
  },
  "peerDependenciesMeta": {
    "@storybook/react": {
      "optional": true
    },
    "vite": {
      "optional": true
    }
  }
}
