{
  "name": "mdxui",
  "version": "0.0.0",
  "description": "Compose, Design, & Publish MDX-based UI Components",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./products": {
      "types": "./dist/products.d.ts",
      "import": "./dist/products.js",
      "require": "./dist/products.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo"
  },
  "keywords": [
    "mdx",
    "mdxui",
    "ui",
    "components"
  ],
  "license": "MIT",
  "devDependencies": {
    "digital-products": "workspace:^",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "digital-products": "*"
  },
  "peerDependenciesMeta": {
    "digital-products": {
      "optional": true
    }
  }
}
