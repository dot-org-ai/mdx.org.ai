{
  "name": "mdxai",
  "version": "0.0.0",
  "description": "Manage, Deploy, & Run MDX-based AI Agents",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "mdxai": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.js",
      "require": "./dist/cli.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo"
  },
  "keywords": [
    "mdx",
    "mdxai",
    "ai",
    "agents",
    "claude",
    "mcp"
  ],
  "license": "MIT",
  "dependencies": {
    "@mdxdb/fs": "workspace:*",
    "@mdxdb/sqlite": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.23.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "mdxdb": "workspace:*",
    "mdxld": "workspace:*",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
