{
  "name": "mdxld",
  "version": "0.0.0",
  "description": "Parse, Stringify, Validate, and Compile MDXLD Documents",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./ast": {
      "types": "./dist/ast.d.ts",
      "import": "./dist/ast.js",
      "require": "./dist/ast.cjs"
    },
    "./compile": {
      "types": "./dist/compile.d.ts",
      "import": "./dist/compile.js",
      "require": "./dist/compile.cjs"
    },
    "./validate": {
      "types": "./dist/validate.d.ts",
      "import": "./dist/validate.js",
      "require": "./dist/validate.cjs"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js",
      "require": "./dist/types.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo"
  },
  "keywords": [
    "mdx",
    "mdxld",
    "linked-data",
    "json-ld",
    "parse",
    "stringify",
    "compile",
    "ast",
    "validate",
    "arktype"
  ],
  "license": "MIT",
  "peerDependencies": {
    "arktype": "^2.0.0"
  },
  "peerDependenciesMeta": {
    "arktype": {
      "optional": true
    }
  },
  "devDependencies": {
    "arktype": "^2.1.27",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
