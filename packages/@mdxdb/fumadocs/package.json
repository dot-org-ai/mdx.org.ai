{
  "name": "@mdxdb/fumadocs",
  "version": "0.0.0",
  "description": "Fumadocs content source adapter for mdxdb",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo"
  },
  "keywords": [
    "mdxdb",
    "fumadocs",
    "content-source",
    "mdx",
    "documentation"
  ],
  "license": "MIT",
  "dependencies": {
    "mdxdb": "workspace:*",
    "mdxld": "workspace:*"
  },
  "peerDependencies": {
    "fumadocs-core": ">=14.0.0"
  },
  "devDependencies": {
    "@mdxld/tsconfig": "workspace:^",
    "fumadocs-core": "^14.7.7",
    "fumadocs-mdx": "^14.0.4",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
