{
  "name": "@mdxdb/postgres",
  "version": "1.9.0",
  "description": "PostgreSQL adapter for mdxdb",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo"
  },
  "keywords": [
    "mdxdb",
    "postgres",
    "postgresql",
    "database",
    "adapter"
  ],
  "license": "MIT",
  "dependencies": {
    "ai-database": "workspace:^",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@mdxld/config": "workspace:^",
    "@types/pg": "^8.11.10",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ai-primitives/mdx.org.ai",
    "directory": "packages/@mdxdb/postgres"
  },
  "author": "MDX.org.ai"
}
