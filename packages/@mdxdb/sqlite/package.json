{
  "name": "@mdxdb/sqlite",
  "version": "0.0.0",
  "description": "SQLite adapter for mdxdb - stores MDX documents in SQLite",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo"
  },
  "keywords": [
    "mdxdb",
    "sqlite",
    "database",
    "adapter",
    "mdx"
  ],
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^11.7.0"
  },
  "peerDependencies": {
    "mdxdb": "workspace:*",
    "mdxld": "workspace:*"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "mdxdb": "workspace:*",
    "mdxld": "workspace:*",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
