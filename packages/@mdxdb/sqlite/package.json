{
  "name": "@mdxdb/sqlite",
  "version": "2.0.0",
  "description": "Cloudflare Durable Objects SQLite adapter - clean graph database with _data and _rels tables",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./durable-object": {
      "types": "./dist/durable-object.d.ts",
      "import": "./dist/durable-object.js",
      "require": "./dist/durable-object.cjs"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js",
      "require": "./dist/client.cjs"
    },
    "./miniflare": {
      "types": "./dist/miniflare.d.ts",
      "import": "./dist/miniflare.js",
      "require": "./dist/miniflare.cjs"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "import": "./dist/schema.js",
      "require": "./dist/schema.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo"
  },
  "keywords": [
    "mdxdb",
    "sqlite",
    "cloudflare",
    "durable-objects",
    "workers",
    "database",
    "graph",
    "rpc"
  ],
  "license": "MIT",
  "dependencies": {},
  "peerDependencies": {
    "@mdxe/isolate": "workspace:^",
    "miniflare": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "@mdxe/isolate": {
      "optional": true
    },
    "miniflare": {
      "optional": true
    }
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@mdxld/config": "workspace:^",
    "miniflare": "^3.20241106.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ai-primitives/mdx.org.ai",
    "directory": "packages/@mdxdb/sqlite"
  },
  "author": "MDX.org.ai"
}
