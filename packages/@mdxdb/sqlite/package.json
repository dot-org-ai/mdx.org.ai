{
  "name": "@mdxdb/sqlite",
  "version": "0.0.0",
  "description": "Cloudflare Durable Objects SQLite adapter for mdxdb - namespace-isolated storage with Workers RPC",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./durable-object": {
      "types": "./dist/durable-object.d.ts",
      "import": "./dist/durable-object.js",
      "require": "./dist/durable-object.cjs"
    },
    "./miniflare": {
      "types": "./dist/miniflare.d.ts",
      "import": "./dist/miniflare.js",
      "require": "./dist/miniflare.cjs"
    },
    "./sync": {
      "types": "./dist/sync.d.ts",
      "import": "./dist/sync.js",
      "require": "./dist/sync.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo"
  },
  "keywords": [
    "mdxdb",
    "sqlite",
    "cloudflare",
    "durable-objects",
    "workers",
    "database",
    "adapter",
    "mdx",
    "vector",
    "embeddings",
    "rpc"
  ],
  "license": "MIT",
  "dependencies": {},
  "peerDependencies": {
    "miniflare": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "miniflare": {
      "optional": true
    }
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@mdxld/config": "workspace:^",
    "miniflare": "^3.20241106.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
