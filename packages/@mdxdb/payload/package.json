{
  "name": "@mdxdb/payload",
  "version": "1.9.0",
  "description": "Payload CMS database adapter for mdxdb - supports SQLite (Durable Objects) and ClickHouse backends on Cloudflare Workers",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./sqlite": {
      "types": "./dist/sqlite.d.ts",
      "import": "./dist/sqlite.js",
      "require": "./dist/sqlite.cjs"
    },
    "./clickhouse": {
      "types": "./dist/clickhouse.d.ts",
      "import": "./dist/clickhouse.js",
      "require": "./dist/clickhouse.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo"
  },
  "keywords": [
    "mdxdb",
    "payload",
    "payload-cms",
    "database",
    "adapter",
    "cloudflare-workers",
    "sqlite",
    "clickhouse",
    "durable-objects"
  ],
  "license": "MIT",
  "dependencies": {
    "@mdxdb/sqlite": "workspace:^",
    "@mdxdb/clickhouse": "workspace:^"
  },
  "peerDependencies": {
    "payload": ">=3.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@mdxld/config": "workspace:^",
    "payload": "^3.0.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ai-primitives/mdx.org.ai",
    "directory": "packages/@mdxdb/payload"
  },
  "author": "MDX.org.ai"
}
