{
  "name": "@mdxdb/fs",
  "version": "1.9.1",
  "description": "Filesystem adapter for mdxdb - stores MDX documents as files",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo"
  },
  "keywords": [
    "mdxdb",
    "filesystem",
    "fs",
    "adapter",
    "mdx",
    "database"
  ],
  "license": "MIT",
  "peerDependencies": {
    "@mdxld/extract": ">=1.9.0",
    "ai-database": ">=2.0.0",
    "mdxld": ">=1.9.0"
  },
  "peerDependenciesMeta": {
    "@mdxld/extract": { "optional": true },
    "ai-database": { "optional": true },
    "mdxld": { "optional": true }
  },
  "devDependencies": {
    "@mdxld/config": "workspace:^",
    "@mdxld/extract": "^1.9.0",
    "ai-database": "^2.1.3",
    "mdxld": "^1.9.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ai-primitives/mdx.org.ai",
    "directory": "packages/@mdxdb/fs"
  },
  "author": "MDX.org.ai"
}
