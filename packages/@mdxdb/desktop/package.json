{
  "name": "@mdxdb/desktop",
  "version": "0.0.0",
  "description": "MDXDB for Electron - desktop document database with editor",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./main": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.js",
      "require": "./dist/main.cjs"
    },
    "./renderer": {
      "types": "./dist/renderer.d.ts",
      "import": "./dist/renderer.js",
      "require": "./dist/renderer.cjs"
    },
    "./preload": {
      "types": "./dist/preload.d.ts",
      "import": "./dist/preload.js",
      "require": "./dist/preload.cjs"
    },
    "./studio-ipc": {
      "types": "./dist/studio-ipc.d.ts",
      "import": "./dist/studio-ipc.js",
      "require": "./dist/studio-ipc.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo"
  },
  "keywords": [
    "mdxdb",
    "desktop",
    "electron",
    "editor",
    "database",
    "mdx"
  ],
  "license": "MIT",
  "peerDependencies": {
    "electron": ">=28.0.0",
    "mdxld": "workspace:*"
  },
  "dependencies": {
    "@mdxdb/studio": "workspace:*",
    "@mdxe/electron": "workspace:*"
  },
  "devDependencies": {
    "@mdxld/config": "workspace:^",
    "mdxld": "workspace:*",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
