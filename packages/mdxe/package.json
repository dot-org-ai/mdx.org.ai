{
  "name": "mdxe",
  "version": "0.0.0",
  "description": "Execute, Test, & Deploy MDX-based Agents, Apps, APIs, and Sites",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "mdxe": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./sdk": {
      "types": "./dist/sdk.d.ts",
      "import": "./dist/sdk.js",
      "require": "./dist/sdk.cjs"
    },
    "./deploy": {
      "types": "./dist/commands/deploy.d.ts",
      "import": "./dist/commands/deploy.js",
      "require": "./dist/commands/deploy.cjs"
    },
    "./cloudflare": {
      "types": "./dist/cloudflare/api.d.ts",
      "import": "./dist/cloudflare/api.js",
      "require": "./dist/cloudflare/api.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo"
  },
  "keywords": [
    "mdx",
    "mdxe",
    "execute",
    "deploy",
    "cloudflare",
    "workers",
    "fumadocs",
    "opennext"
  ],
  "license": "MIT",
  "peerDependencies": {
    "mdxld": "workspace:*"
  },
  "dependencies": {
    "@mdxe/hono": "workspace:*",
    "ai-sandbox": "file:../../primitives/packages/ai-sandbox",
    "ai-functions": "file:../../primitives/packages/ai-functions",
    "ai-workflows": "file:../../primitives/packages/ai-workflows",
    "esbuild": "^0.27.0",
    "glob": "^10.4.5",
    "hono": "^4.6.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^2.1.9",
    "mdxld": "workspace:*",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
