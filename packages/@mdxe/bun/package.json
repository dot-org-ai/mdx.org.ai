{
  "name": "@mdxe/bun",
  "version": "1.9.0",
  "description": "Bun runtime for mdxe - fast MDX server, test runner, and script executor with native Bun APIs",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "mdxe-bun": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js",
      "require": "./dist/server.cjs"
    },
    "./loader": {
      "types": "./dist/loader.d.ts",
      "import": "./dist/loader.js",
      "require": "./dist/loader.cjs"
    },
    "./test": {
      "types": "./dist/test.d.ts",
      "import": "./dist/test.js",
      "require": "./dist/test.cjs"
    },
    "./evaluate": {
      "types": "./dist/evaluate.d.ts",
      "import": "./dist/evaluate.js",
      "require": "./dist/evaluate.cjs"
    },
    "./extract": {
      "types": "./dist/extract.d.ts",
      "import": "./dist/extract.js",
      "require": "./dist/extract.cjs"
    },
    "./runner": {
      "types": "./dist/runner.d.ts",
      "import": "./dist/runner.js",
      "require": "./dist/runner.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo"
  },
  "keywords": [
    "mdxe",
    "bun",
    "server",
    "mdx",
    "mdxld",
    "runtime",
    "test",
    "runner"
  ],
  "license": "MIT",
  "dependencies": {
    "@mdxe/isolate": "workspace:*",
    "mdxld": "workspace:*",
    "@mdxld/ast": "workspace:*",
    "hono": "^4.0.0",
    "miniflare": "^4.20250508.2"
  },
  "peerDependencies": {
    "bun": ">=1.0.0"
  },
  "peerDependenciesMeta": {
    "bun": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ai-primitives/mdx.org.ai",
    "directory": "packages/@mdxe/bun"
  },
  "author": "MDX.org.ai"
}
