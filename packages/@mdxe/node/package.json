{
  "name": "@mdxe/node",
  "version": "1.9.0",
  "description": "DEPRECATED: Use @mdxe/workers/local instead. Securely evaluate MDX in Node.js using miniflare workerd runtime.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo"
  },
  "keywords": [
    "mdxe",
    "node",
    "runtime",
    "miniflare",
    "workerd",
    "isolate",
    "sandbox",
    "mdx",
    "evaluate",
    "deprecated"
  ],
  "deprecated": "Use @mdxe/workers/local instead",
  "license": "MIT",
  "dependencies": {
    "@mdxe/workers": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ai-primitives/mdx.org.ai",
    "directory": "packages/@mdxe/node"
  },
  "author": "MDX.org.ai"
