{
  "name": "@mdxe/workers",
  "version": "1.9.0",
  "description": "Pure Cloudflare Workers execution for MDX - evaluate MDX securely at the edge",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./build": {
      "types": "./dist/build-entry.d.ts",
      "import": "./dist/build-entry.js",
      "require": "./dist/build-entry.cjs"
    },
    "./runtime": {
      "types": "./dist/runtime.d.ts",
      "import": "./dist/runtime.js",
      "require": "./dist/runtime.cjs"
    },
    "./local": {
      "types": "./dist/local.d.ts",
      "import": "./dist/local.js",
      "require": "./dist/local.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo"
  },
  "keywords": [
    "mdxe",
    "workers",
    "cloudflare",
    "runtime",
    "isolate",
    "sandbox",
    "mdx",
    "evaluate",
    "edge"
  ],
  "license": "MIT",
  "dependencies": {
    "@mdxe/isolate": "workspace:*"
  },
  "optionalDependencies": {
    "esbuild": "^0.24.0",
    "mdxld": "workspace:*",
    "miniflare": "^4.20250508.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@mdxe/test-utils": "workspace:*",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "wrangler": "^4.21.0"
  },
  "peerDependencies": {
    "esbuild": "^0.24.0"
  },
  "peerDependenciesMeta": {
    "esbuild": {
      "optional": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ai-primitives/mdx.org.ai",
    "directory": "packages/@mdxe/workers"
  },
  "author": "MDX.org.ai"
}
