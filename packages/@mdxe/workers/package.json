{
  "name": "@mdxe/workers",
  "version": "0.0.0",
  "description": "Securely evaluate MDX in Cloudflare Workers using Dynamic Worker Loader",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo"
  },
  "keywords": [
    "mdxe",
    "workers",
    "cloudflare",
    "runtime",
    "isolate",
    "sandbox",
    "mdx",
    "evaluate"
  ],
  "license": "MIT",
  "dependencies": {
    "@mdxe/isolate": "workspace:*",
    "esbuild": "^0.24.0",
    "mdxld": "workspace:*"
  },
  "devDependencies": {
    "miniflare": "^4.20250817.0",
    "@cloudflare/vitest-pool-workers": "^0.8.0",
    "@cloudflare/workers-types": "^4.20241127.0",
    "wrangler": "^4.21.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
