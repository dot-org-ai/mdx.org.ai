{
  "name": "@mdxld/formats",
  "version": "1.9.0",
  "description": "Unified format utilities - JSON, YAML, CSV, XLSX, PDF, Markdown, HTML with consistent parse/stringify/fetch API",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo"
  },
  "keywords": [
    "mdxld",
    "formats",
    "json",
    "yaml",
    "csv",
    "xlsx",
    "pdf",
    "markdown",
    "html",
    "parse",
    "stringify",
    "fetch",
    "convert"
  ],
  "author": "MDX.org.ai",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ai-primitives/mdx.org.ai",
    "directory": "packages/@mdxld/formats"
  },
  "dependencies": {
    "@mdxld/types": "workspace:*",
    "@mdxld/json": "workspace:*",
    "@mdxld/yaml": "workspace:*",
    "@mdxld/csv": "workspace:*",
    "@mdxld/xlsx": "workspace:*",
    "@mdxld/pdf": "workspace:*",
    "@mdxld/markdown": "workspace:*",
    "@mdxld/html": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
